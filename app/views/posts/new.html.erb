<h1>New Post</h1>

<% if @posts.errors.any? %>
<div class="alert alert-error">
	<strong>Error: </strong> Your post was invalid!

	<ul>
 		<%= @posts.errors.full_messages.each do |message| %>
 			<li><%= message %></li>
		<% end %>	
	</ul>
</div>

<%= form_for @posts, :url => posts_path, html: {multipart: true} do |f| %>

	<div>
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>

	<div>
		<%= f.label :description %>
		<%= f.text_area :description, rows: 3 %>
	</div>
	
	<div>	
		<%= f.label :link %>
		<%= f.text_field :link %>
	</div>
		
	<%= f.submit "Save Post", class: "btn btn-primary" %>	
<% end %>	