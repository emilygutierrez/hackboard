<h1>New Post</h1>

<%= form_for @posts, :url => posts_path, html: {multipart: true} do |f| %>

	<%= @posts.errors.full_messages %>

	<div>
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>

	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	
	<div>	
		<%= f.label :link %>
		<%= f.text_field :link %>
	</div>
		
	<%= f.submit %>	
<% end %>	